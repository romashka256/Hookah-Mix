<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/picture_imageview_item"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_textview_item"
        android:textColor="#FFF"
        android:text="Грейпфрут"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:textSize="17sp"
        android:layout_toRightOf="@id/picture_imageview_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/family_textview_item"
        android:textColor="@color/family"
        android:text="Al fakher"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/name_textview_item"
        android:textSize="12sp"
        android:layout_toRightOf="@id/picture_imageview_item"/>

    <RatingBar
        android:id="@+id/ratingbar_item"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_toRightOf="@id/family_textview_item"
        android:layout_toEndOf="@id/family_textview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="49dp"
        android:numStars="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_int_item"
        android:layout_toRightOf="@id/ratingbar_item"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/ratingBar"
        android:textSize="13sp"
        android:text="4.1"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:checked="true"
        android:button="@null"
        android:background="?android:attr/listChoiceIndicatorMultiple"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

</RelativeLayout>