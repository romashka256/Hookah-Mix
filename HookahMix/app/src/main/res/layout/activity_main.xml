<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/abs_layout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/tool_bar"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tabak_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Грейпфрут"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tabak_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabak_name"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:text="Al fakher"
        android:textColor="#41ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabak_family"
        android:layout_marginLeft="24dp">

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/rating_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:text="4.1"
            android:textColor="#00c7af"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_favorite_black_24dp"
        android:padding="15dp"
        android:layout_alignTop="@id/tabak_name"
        android:layout_alignRight="@+id/tabak_description"
        android:layout_alignEnd="@+id/tabak_description"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/tabak_description"
        android:layout_marginTop="15dp"
        android:layout_height="35dp"
        android:background="#445892"
        android:textColor="#FFF"
        android:text="МИКСЫ С ГРЕЙПФРУТОМ"
        android:gravity="center_vertical"
        android:paddingLeft="24dp" />

    <view
        android:layout_width="match_parent"
        android:layout_height="180dp"
        class="android.support.v4.widget.Space"
        android:layout_below="@+id/tabak_description"
        android:layout_marginTop="135dp"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/tabak_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:lineSpacingMultiplier="1.3"
        android:text="Не следует, однако забывать, что начало повседневной работы по формированию позиции влечет за собой процесс внедрения и модернизации новых предложений."
        android:textColor="#79ffffff"
        android:textSize="13sp"
        android:layout_below="@+id/linearlayout"
        android:layout_alignLeft="@+id/linearlayout"
        android:layout_alignStart="@+id/linearlayout" />

</RelativeLayout>
