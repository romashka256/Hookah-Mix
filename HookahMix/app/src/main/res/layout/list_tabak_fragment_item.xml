<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:layout_width="240dp"
    android:layout_height="70dp"
    android:orientation="vertical">
    <View
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"></View>

    <TextView
        android:id="@+id/name_textview_item_tabak_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:text="Грейпфрут, Ананас"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/family_textview_item_tabak_fragment"
        android:layout_marginLeft="18dp"
        android:textSize="10sp"
        android:textColor="@color/family"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al fakher" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="38dp"
        android:numStars="1" />

    <TextView
        android:id="@+id/rating_textview_item_tabak_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/ratingBar"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="38dp"
        android:text="4.1" />

</RelativeLayout>